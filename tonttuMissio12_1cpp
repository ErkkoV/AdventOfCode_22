            elevations[lineHeight -1][i] = int(folder1[i]);
            distance[lineHeight -1][i] = 0;
        }
    }

    
    for (int i = 0; i < 99; i++) {
        for (int y = 0; y < 99; y++) {

            int elavation = elavations[i][y];
            
            if (distance[i][y] == currentDistance) {
                if 
            }

            
            
            int viewRight = 0;
            int viewLeft = 0;
            int viewDown = 0;
            int viewUp = 0;
            
            
            for (int z = 1; z < 99; z++) {
                if (y == 98) {
                    break;
                } else if (y + z == 98) {
                    viewRight +=1;
                    break;
                } else if(height > treeHeight[i][y+z]) {
                    viewRight +=1;
                } else {
                    viewRight +=1;
                    break;
                }
